{
  // Formateo automático al guardar
  "editor.formatOnSave": true,

  // Usar Prettier como formateador predeterminado
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Ajustes específicos de Prettier
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.endOfLine": "auto",

  // ESLint como validador
  "eslint.validate": ["javascript", "typescript", "typescriptreact", "javascriptreact"],

  // Ejecutar ESLint al guardar
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Ocultar advertencias de archivos de node_modules y .next
  "eslint.workingDirectories": [{ "mode": "auto" }]
}
